<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectLion.Views.Login"
             Title="Login"
             Padding="15">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
            <Label
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                Text="TuMulta" />
            <Entry
                x:Name="txtUser"
                Placeholder="Usuario"
                PlaceholderColor="#cbcbcb" />
            <Entry
                x:Name="txtPassword"
                Placeholder="Contraseñña"
                PlaceholderColor="#cbcbcb" />
            <Button
                x:Name="btnIngresar"
                BackgroundColor="#7dbde5"
                Text="Ingresar"
                TextColor="White" />
            <Button
                x:Name="btnCrear"
                BackgroundColor="#bbbbbb"
                Text="Crear cuenta"
                TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>